<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="android:spinnerDropDownItemStyle">@style/DropDownItemStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="showcaseViewStyle">@style/CustomShowcaseTheme</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_background_color</item>
    </style>

    <style name="home_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ok_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">@dimen/normal_button_height</item>
    </style>

    <style name="username_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="next_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/next_button_selector</item>
    </style>

    <style name="dark_text_big">
        <item name="android:textColor">@color/android_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
    </style>


    <style name="prev_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/prev_button_selector</item>
    </style>

    <style name="confirm_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/confirm_button_selector</item>
    </style>


    <style name="delay_button">
        <item name="android:textColor">@color/dark_grey_home</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/delay_button_selector</item>
    </style>

    <style name="delay_spinner_item">
        <item name="android:textColor">@color/dark_grey_home</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/delay_button_selector</item>
    </style>

    <style name="done_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/done_button_selector</item>
    </style>

    <style name="DropDownItemStyle" parent="Widget.AppCompat.Base.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/DropDownItemTextStyle</item>
    </style>

    <style name="DropDownItemTextStyle">
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_titleTextColor">@color/white</item>
        <item name="sv_detailTextColor">@color/white</item>
        <item name="sv_backgroundColor">#cc111111</item>
        <item name="sv_buttonBackgroundColor">#ffffff</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_detailTextAppearance">@style/CustomShowcaseDetail</item>
    </style>

    <style name="CustomShowcaseDetail" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#FF0000</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="schedule_day_unselected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/android_blue_light</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="schedule_day_selected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/android_blue_dark</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="reminder_check_button">
        <item name="android:background">@drawable/reminder_check_button_bgc</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="reminder_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
