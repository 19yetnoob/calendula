    <style name="home_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ok_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">@dimen/normal_button_height</item>
    </style>

    <style name="username_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="next_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/next_button_selector</item>
    </style>

    <style name="dark_text_big">
        <item name="android:textColor">@color/android_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
    </style>


    <style name="prev_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/prev_button_selector</item>
    </style>

    <style name="confirm_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/confirm_button_selector</item>
    </style>


    <style name="delay_button">
        <item name="android:textColor">@color/dark_grey_home</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/delay_button_selector</item>
    </style>

    <style name="delay_spinner_item">
        <item name="android:textColor">@color/dark_grey_home</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/delay_button_selector</item>
    </style>

    <style name="done_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/done_button_selector</item>
    </style>


    <style name="DropDownItemTextStyle">
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="schedule_day_unselected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/android_blue_light</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="schedule_day_selected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/android_blue_dark</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="reminder_check_button">
        <item name="android:background">@drawable/reminder_check_button_bgc</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="reminder_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#bb151515</item>
        <item name="sv_showcaseColor">@color/android_blue</item>
        <item name="sv_detailTextColor">@color/android_blue</item>
        <item name="sv_buttonText">Entendido</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#cc151515</item>
        <item name="sv_showcaseColor">@color/android_blue</item>
        <item name="sv_detailTextColor">@color/android_blue</item>
        <item name="sv_buttonText">Continuar</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/android_blue</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="CustomDetail" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
