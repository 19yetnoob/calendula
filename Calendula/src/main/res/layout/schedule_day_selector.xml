<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Take:"
            android:textColor="@color/android_blue"
            android:layout_weight="1.5" />

        <TextView
            android:text="MO"
            android:id="@+id/day_mo"
            style="@style/schedule_day_selected" />

        <TextView
            android:text="TU"
            android:id="@+id/day_tu"
            style="@style/schedule_day_selected" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="WE"
            android:id="@+id/day_we"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/schedule_day_selected" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TH"
            android:id="@+id/day_th"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/schedule_day_selected" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FR"
            android:id="@+id/day_fr"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/schedule_day_selected" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SA"
            android:id="@+id/day_sa"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/schedule_day_selected" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SU"
            android:id="@+id/day_su"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/schedule_day_selected" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="All"
            android:id="@+id/day_check_all"
            android:layout_weight="1.5"
            android:textColor="@color/android_blue"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>