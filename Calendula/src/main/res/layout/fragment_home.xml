<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"

        android:background="@color/home_background_color"

        android:cropToPadding="false"
        android:scaleType="center"
        android:alpha="0.1" />


    <ImageView
        android:id="@+id/bg_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/calendula_flower_blur"
        android:alpha="1" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/home_right_edge_shadow"
        android:scaleType="fitXY"
        android:alpha="0.5" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:id="@+id/buttons_container"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:visibility="visible">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/home_button_height"
            android:text="@string/home_menu_plantrip"
            android:id="@+id/home_button_plantrip"
            android:textSize="@dimen/home_button_text_size"
            style="@style/home_button"
            android:background="@drawable/plantrip_button_selector"
            android:gravity="center"
            android:paddingRight="@dimen/home_button_height"
            android:layout_below="@+id/home_button_pharmacies"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/home_button_height"
            android:text="@string/home_menu_pharmacies"
            android:id="@+id/home_button_pharmacies"
            android:textSize="@dimen/home_button_text_size"
            style="@style/home_button"
            android:background="@drawable/pharmacies_button_selector"
            android:gravity="center"
            android:paddingRight="@dimen/home_button_height"
            android:layout_below="@+id/home_button_schedules"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/home_button_height"
            android:text="@string/home_menu_schedules"
            android:id="@+id/home_button_schedules"
            android:textSize="@dimen/home_button_text_size"
            style="@style/home_button"
            android:background="@drawable/schedules_button_selector"
            android:gravity="center"
            android:paddingRight="@dimen/home_button_height"
            android:layout_below="@+id/home_button_medicines"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/home_button_height"
            android:text="@string/home_menu_medicines"
            android:id="@+id/home_button_medicines"
            android:textSize="@dimen/home_button_text_size"
            style="@style/home_button"
            android:background="@drawable/medicines_button_selector"
            android:gravity="center"
            android:paddingRight="@dimen/home_button_height"
            android:layout_below="@+id/home_button_routines"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/home_button_height"
            android:text="@string/home_menu_routines"
            android:id="@+id/home_button_routines"
            android:textSize="@dimen/home_button_text_size"
            android:background="@drawable/routines_button_selector"
            style="@style/home_button"
            android:paddingRight="@dimen/home_button_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="@dimen/home_button_height"
            android:layout_height="@dimen/home_button_height"
            android:layout_alignTop="@+id/home_button_routines"
            android:layout_alignRight="@+id/home_button_routines"
            android:src="@drawable/ic_button_routines" />

        <ImageView
            android:layout_width="@dimen/home_button_height"
            android:layout_height="@dimen/home_button_height"
            android:layout_alignTop="@+id/home_button_medicines"
            android:layout_alignRight="@+id/home_button_medicines"
            android:src="@drawable/ic_button_medicines" />

        <ImageView
            android:layout_width="@dimen/home_button_height"
            android:layout_height="@dimen/home_button_height"
            android:layout_alignTop="@+id/home_button_schedules"
            android:layout_alignRight="@+id/home_button_schedules"
            android:src="@drawable/ic_button_schedules" />

        <ImageView
            android:layout_width="@dimen/home_button_height"
            android:layout_height="@dimen/home_button_height"
            android:layout_alignTop="@+id/home_button_pharmacies"
            android:layout_alignRight="@+id/home_button_pharmacies"
            android:src="@drawable/ic_button_pharmacies" />

        <ImageView
            android:layout_width="@dimen/home_button_height"
            android:layout_height="@dimen/home_button_height"
            android:layout_alignTop="@+id/home_button_plantrip"
            android:layout_alignRight="@+id/home_button_plantrip"
            android:src="@drawable/ic_button_plantrip"
            android:id="@+id/imageView3" />


    </RelativeLayout>


</RelativeLayout>