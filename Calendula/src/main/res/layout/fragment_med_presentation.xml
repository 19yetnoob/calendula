<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        android:layout_centerHorizontal="true"
        android:id="@+id/med_presentation_scroll">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/med_presentation_1"
                android:src="@drawable/ic_presentation_1"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:tag="med_type"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="15dp"
                android:alpha="1"
                android:padding="10dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/med_presentation_2"
                android:tag="med_type"
                android:src="@drawable/ic_presentation_2"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="15dp"
                android:alpha="1"
                android:padding="10dp" />

            <ImageView
                android:layout_width="80dp"
                android:tag="med_type"
                android:layout_height="80dp"
                android:id="@+id/med_presentation_3"
                android:src="@drawable/ic_presentation_3"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="15dp"
                android:alpha="1"
                android:padding="10dp" />

            <ImageView
                android:layout_width="80dp"
                android:tag="med_type"
                android:layout_height="80dp"
                android:id="@+id/med_presentation_4"
                android:src="@drawable/ic_presentation_4"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="15dp"
                android:alpha="1"
                android:padding="10dp" />

            <ImageView
                android:layout_width="80dp"
                android:tag="med_type"
                android:layout_height="80dp"
                android:id="@+id/med_presentation_5"
                android:src="@drawable/ic_presentation_5"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="15dp"
                android:alpha="1"
                android:padding="10dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:tag="med_type"
                android:id="@+id/med_presentation_6"
                android:src="@drawable/ic_presentation_6"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="15dp"
                android:alpha="1"
                android:padding="10dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:id="@+id/imageView3"
        android:src="@drawable/presentation_box_left"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:id="@+id/imageView3"
        android:src="@drawable/presentation_box_right"
        android:adjustViewBounds="false"
        android:layout_alignParentRight="true"
        android:cropToPadding="false"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/imageView4"
        android:src="@drawable/presentation_box_shadow_top"
        android:scaleType="fitXY"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="4dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/imageView4"
        android:src="@drawable/presentation_box_shadow_bottom"
        android:scaleType="fitXY"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="113dp" />

</RelativeLayout>