<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/daily_view_content"
        android:dividerPadding="0dp"
        android:divider="@null"
        android:background="@drawable/daily_view_item_bg"
        android:layout_marginBottom="10dp">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/routine_list_item_container"
            android:background="#ccefefef"
            android:paddingTop="2dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:src="@drawable/arrow_down"
                android:id="@+id/count_container"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:alpha="0.8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Breakfast (3 pills)"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/routines_list_item_name"
                android:textColor="@color/android_blue_darker"
                android:layout_toEndOf="@+id/linearLayout"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:ellipsize="end"
                android:textSize="20dp"
                android:gravity="bottom"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                android:layout_alignBottom="@+id/linearLayout" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:id="@+id/linearLayout"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton2"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_alarm_black_48dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:"
                    android:id="@+id/routines_list_item_hour"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:id="@+id/routines_list_item_minute"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/routines_list_item_hour"
                    android:textColor="#222"
                    android:textSize="20dp"
                    android:gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" h"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/routines_list_item_minute"
                    android:textColor="#222"
                    android:textSize="20dp"
                    android:gravity="bottom" />

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:id="@+id/imageView2"
                android:background="#ececec"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:paddingBottom="5dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/med_item_list"
                android:layout_alignParentLeft="true"></LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>