<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/calendula_flower"
                android:alpha="1" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                tools:context=".HomeActivity" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/profile_container"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@color/android_blue_dark"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    style="@style/username_text"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ángel Piñeiro"
                    android:id="@+id/profile_username"
                    android:layout_alignTop="@+id/profile_image_container"
                    android:layout_toRightOf="@+id/profile_image_container"
                    android:layout_toEndOf="@+id/profile_image_container"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/dark_grey_home"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/profile_image_container"
                    android:background="@drawable/rounded_profile_image_container"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">


                    <com.makeramen.RoundedImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:src="@drawable/default_avatar"
                        android:id="@+id/profile_image"
                        android:scaleType="centerCrop"
                        app:corner_radius="30dp"
                        app:border_width="3dp"
                        app:border_color="#ffffff"
                        app:mutate_background="true"
                        app:oval="true"
                        android:layout_margin="2dp"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Next med at 12:00h"
                    android:id="@+id/textView"
                    android:layout_below="@+id/profile_username"
                    android:layout_toRightOf="@+id/profile_image_container"
                    android:layout_toEndOf="@+id/profile_image_container"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Lunch, 2 medicines"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/textView"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:textColor="@color/white" />


            </RelativeLayout>


        </RelativeLayout>
    </FrameLayout>
    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/android_blue" />
</android.support.v4.widget.DrawerLayout>