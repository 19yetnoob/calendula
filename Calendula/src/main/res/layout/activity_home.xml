<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/drawerbg_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <es.usc.citius.servando.calendula.util.view.ScrimInsetsFrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        app:insetForeground="#1000"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/android_blue_dark">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:layout_height="match_parent">

            <!--android:layout_marginTop="56dp"-->
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".HomeActivity" />

            <com.melnykov.fab.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="16dp"
                android:src="@drawable/ic_action_add"
                fab:fab_colorNormal="@color/android_blue_dark"
                fab:fab_colorPressed="@color/android_blue"
                fab:fab_colorRipple="@color/android_blue_light"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@color/transparent"
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_marginTop="@dimen/status_bar_height" />

            <!--<com.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/tabs_height"
                android:background="@color/android_blue_darker"
                android:elevation="50dp"
                android:layout_below="@+id/toolbar" />-->

            <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/tabs"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabs_height"
                app:stl_indicatorAlwaysInCenter="false"
                app:stl_indicatorInFront="false"
                app:stl_indicatorInterpolation="smart"
                app:stl_indicatorColor="#fff"
                app:stl_indicatorThickness="@dimen/tab_indicator_height"
                app:stl_indicatorCornerRadius="0dp"
                app:stl_underlineThickness="3dp"
                app:stl_underlineColor="@color/transparent"
                app:stl_dividerThickness="0dp"
                app:stl_dividerColor="@color/transparent"
                app:stl_defaultTabTextAllCaps="true"
                app:stl_defaultTabTextColor="#FFF"
                app:stl_defaultTabTextSize="12sp"
                app:stl_defaultTabTextHorizontalPadding="16dp"
                app:stl_defaultTabTextMinWidth="100dp"
                app:stl_distributeEvenly="true" />

            <!-- tabs.setShouldExpand(true);
            tabs.setAllCaps(true);
            tabs.setTabPaddingLeftRight(30);
            tabs.setShouldExpand(true);
            tabs.setDividerColor(getResources().getColor(R.color.white_50));
            tabs.setDividerColor(getResources().getColor(R.color.transparent));
            tabs.setIndicatorHeight(getResources().getDimensionPixelSize(R.dimen.tab_indicator_height));

            tabs.setIndicatorColor(getResources().getColor(R.color.white));
            tabs.setTextColor(getResources().getColor(R.color.white_80));
            tabs.setUnderlineColor(getResources().getColor(R.color.transparent));-->


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:id="@+id/tabs_shadow"
                android:src="@drawable/daily_view_list_item_tab_shadow_top"
                android:layout_below="@+id/tabs"
                android:scaleType="fitXY"
                android:alpha="0.5" />

        </RelativeLayout>

    </es.usc.citius.servando.calendula.util.view.ScrimInsetsFrameLayout>

    <!-- The main content view -->
    <!-- The navigation drawer -->
    <es.usc.citius.servando.calendula.util.view.ScrimInsetsFrameLayout
        android:id="@+id/left_drawer"
        app:insetForeground="#5000"
        android:layout_width="300dp"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:background="@color/drawerbg_default"
        android:fitsSystemWindows="true">


        <ListView
            android:id="@+id/left_drawer_list"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="@color/drawerbg" />

    </es.usc.citius.servando.calendula.util.view.ScrimInsetsFrameLayout>


</android.support.v4.widget.DrawerLayout>


