<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/summary_title"
        android:id="@+id/summaryTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textColor="@color/android_blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MedName"
        android:id="@+id/sched_summary_medname"
        android:layout_below="@+id/summaryTitle"
        android:layout_alignLeft="@+id/summaryTitle"
        android:layout_alignStart="@+id/summaryTitle"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="@color/android_blue_dark"
        android:textSize="32dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/sched_summary_medicon"
        android:layout_alignBottom="@+id/sched_summary_medname"
        android:layout_alignRight="@+id/summaryTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Every day"
        android:id="@+id/sched_summary_medi_days"
        android:layout_below="@+id/sched_summary_medname"
        android:textSize="25dp"
        android:textColor="@color/android_blue"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Three times a day"
        android:id="@+id/sched_summary_medi_dailyfreq"
        android:textSize="25dp"
        android:textColor="@color/android_blue"
        android:layout_below="@+id/sched_summary_medi_days"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp" />

</RelativeLayout>
