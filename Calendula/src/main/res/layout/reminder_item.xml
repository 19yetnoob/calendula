<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="0dp"
    android:id="@+id/reminder_item_container"
    android:background="@drawable/reminder_item_bg"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="10dp">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/options_button"
        android:src="@drawable/ic_dropdown"
        android:scaleType="centerInside"
        android:cropToPadding="false"
        android:background="@color/white_50"
        android:padding="25dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Atrovent"
            android:id="@+id/med_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2 pills"
            android:id="@+id/med_dose"
            android:layout_below="@+id/med_name"
            android:layout_alignLeft="@+id/med_name"
            android:layout_alignStart="@+id/med_name"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <ToggleButton
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:id="@+id/check_button"
        style="@style/reminder_check_button"
        android:layout_margin="12dp"
        android:checked="false"
        android:clickable="true" />
</LinearLayout>
