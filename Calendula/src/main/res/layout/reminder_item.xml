<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="2dp"
    android:id="@+id/reminder_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:background="@drawable/simple_highlight_click_selector">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/daily_agenda_item_med_right"
        android:padding="5dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:src="@drawable/ic_presentation_2"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignBottom="@+id/med_item_dose" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ibuprofeno"
            android:id="@+id/med_item_name"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/dark_grey_text"
            android:textStyle="bold"
            android:gravity="center_vertical"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="(1 capsule)"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/med_item_dose"
            android:textColor="@color/dark_grey_text"
            android:textStyle="bold"
            android:gravity="center_vertical"

            android:layout_toEndOf="@+id/imageView"
            android:layout_alignLeft="@+id/med_item_name"
            android:layout_alignStart="@+id/med_item_name"
            android:layout_below="@+id/med_item_name"
            android:layout_alignBottom="@+id/check_button"
            android:layout_marginLeft="2dp"
            android:textSize="20sp" />

        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/check_button"
            style="@style/reminder_check_button"
            android:checked="false"
            android:clickable="true"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

